{
  "name": "11ty",
  "version": "0.1.0",
  "description": "A static site built with 11ty",
  "author": "MindfulMinun <importantmails4bc@gmail.com> (https://benjic.xyz)",
  "contributors": [],
  "homepage": "https://github.com/MindfulMinun/11ty",
  "repository": "github:MindfulMinun/11ty",
  "license": "MIT",
  "private": true,
  "_type": "module",
  "scripts": {
    "watch": "rm -rf ./dist && npx @11ty/eleventy --serve --port=1337",
    "build": "rm -rf ./dist && npx @11ty/eleventy && npm run build:images",
    "build:images": "npm run build:images:webp && npm run build:images:resize",
    "build:images:webp": "`for file in dist/static/images/*; do ./node_modules/cwebp-bin/vendor/cwebp -q 80 \"$file\" -o \"${file%.*}.webp\"; done`",
    "build:images:resize": "`for file in dist/static/images/*; do convert -resize 50% \"$file\" \"${file%.*}-small.${file##*.}\"; convert -resize 25% \"$file\" \"${file%.*}-tiny.${file##*.}\"; done`",
    "install-brew-dependencies": "brew install imagemagick",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=8.0.0 <11.0.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.0",
    "cwebp-bin": "^5.0.0",
    "twemoji": "^13.0.0"
  }
}
